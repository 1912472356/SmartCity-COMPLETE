<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".smart.model.KaimoLiebiaoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="2dp"
            android:src="@mipmap/back"
            android:tint="@color/white"
            android:layout_margin="15dp"
            android:onClick="back"
            />

        <TextView
            android:text="楷模列表"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            />

    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/kaimo_head1"
            android:layout_margin="10dp"
            android:id="@+id/head"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/head"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:text="原龙溪"
            android:textColor="@color/black"
            android:id="@+id/name"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/head"
            android:layout_below="@id/name"
            android:singleLine="false"
            android:lineSpacingExtra="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="100dp"
            android:background="@color/white"
            android:text="楷模简介楷模简介楷模简介楷楷模简介楷模简介楷模简介楷模简介楷模简介楷模简介模简介楷模简介楷模简介"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:onClick="btn"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/round_theme"
            android:backgroundTint="@color/theme"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:text="致敬"

            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/head"
            android:id="@+id/comment">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/simple_comment_recyc"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_below="@id/comment"
            android:background="@color/white">
            <EditText
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:layout_marginRight="20dp"
                app:queryBackground="@android:color/transparent"
                app:iconifiedByDefault="false"
                android:background="@drawable/round_gray"
                android:id="@+id/comment_et"
                android:drawableLeft="@mipmap/comment"
                android:drawablePadding="10dp"
                android:hint="请输入留言内容"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:id="@+id/comment_btn"
                android:background="@drawable/round_theme"
                android:backgroundTint="@color/theme"
                android:layout_gravity="center"
                android:text="评论"
                />
        </LinearLayout>
    </RelativeLayout>
